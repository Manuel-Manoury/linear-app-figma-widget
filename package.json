{
  "name": "linear-app-figma-widget",
  "version": "1.0.0",
  "description": "Figma widget to connect to linear",
  "main": "index.js",
  "author": "Xavier Agostini <xavier.agostini@mail.mcgill.ca>",
  "license": "MIT",
  "scripts": {
    "test": "yarn run tsc && yarn run build",
    "format": "prettier --write .",
    "tsc": "yarn run tsc:main && yarn run tsc:ui",
    "tsc:watch": "concurrently -n widget,iframe \"yarn run tsc:main -- --watch --preserveWatchOutput\" \"yarn run tsc:ui -- --watch --preserveWatchOutput\"",
    "tsc:main": "tsc --noEmit -p src/code",
    "tsc:ui": "tsc --noEmit -p src/ui",
    "build": "yarn run build:ui && yarn run build:main -- --minify",
    "build:ui": "yarn vite build --minify esbuild --emptyOutDir=false",
    "build:main": "esbuild src/code/code.tsx --bundle --outfile=dist/code.js",
    "build:watch": "concurrently -n widget,iframe \"yarn run build:main -- --watch\" \"yarn run build:ui -- --watch\"",
    "dev": "NODE_ENV=dev & concurrently -n tsc,build,vite --mode dev 'yarn tsc:watch' 'yarn:build:watch' -- --preserveWatchOutput --watch",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@sentry/react": "^7.46.0",
    "axios": "^1.3.4",
    "chroma-js": "^2.4.2",
    "classnames": "^2.3.2",
    "prosemirror-model": "^1.23.0",
    "prosemirror-schema-basic": "^1.2.3",
    "prosemirror-state": "^1.4.3",
    "prosemirror-view": "^1.36.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "react-select": "^5.7.2",
    "uuidv4": "^6.2.13",
    "y-prosemirror": "^1.2.12",
    "y-protocols": "^1.0.6",
    "yjs": "^13.6.20"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@figma/plugin-typings": "^1.49.0",
    "@figma/widget-typings": "^1.4.0",
    "@storybook/addon-actions": "^6.5.16",
    "@storybook/addon-essentials": "^6.5.16",
    "@storybook/addon-interactions": "^6.5.16",
    "@storybook/addon-links": "^6.5.16",
    "@storybook/builder-vite": "^0.4.2",
    "@storybook/react": "^6.5.16",
    "@storybook/testing-library": "^0.0.13",
    "@types/chroma-js": "^2.4.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "babel-loader": "^8.3.0",
    "concurrently": "^6.4.0",
    "esbuild": "^0.13.15",
    "storybook": "^6.5.16",
    "storybook-addon-mock": "^3.2.0",
    "typescript": "^4.3.5",
    "vite": "^4.2.1",
    "vite-plugin-singlefile": "^0.13.3",
    "vite-svg-loader": "^3.3.0"
  }
}
